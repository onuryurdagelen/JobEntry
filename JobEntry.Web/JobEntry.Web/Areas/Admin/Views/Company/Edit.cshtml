@model UpdateCompanyDto

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header">Edit Company</h5>
            <div class="card-body">
                <form method="post" asp-controller="Company" asp-action="Edit" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group mb-3">
                        <label for="defaultFormControlInput" class="form-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label for="defaultFormControlInput" class="form-label">Description</label>
                        <textarea rows="4" cols="3" class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <!--Image div oluştur-->
                   <!--File type input oluştur-->
                    <div class="form-group mb-3">
                        <label asp-for="Image.FileName" class="form-label d-block">Current Image</label>
                       <img style="height:5em;width:5em;" src="~/images/@Model.Image?.FileName"/>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Photo" class="form-label"></label>
                        <input asp-for="Photo" class="form-control" accept="image/*" type="file">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary w-100">Save</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>