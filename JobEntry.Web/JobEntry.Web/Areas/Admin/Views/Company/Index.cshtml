@model List<CompanyDto>
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Page Management /</span> Companies</h4>

<div class="card">
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <div class="mb-3">
                <a class="btn btn-success" asp-area="Admin" asp-controller="Company" asp-action="Add">
                    Create Company <i class="bx bx-plus"></i>
                </a>
            </div>
            <table class="table table-striped table-bordered" id="table-companies">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var job in Model)
                    {
                        <tr data-id="@job.Id">
                            <td>@job.Name</td>
                            <td>
                                <img style="width:50px;height:50px;" src="~/images/@job.Image?.FileName"/>
                            </td>
                            <td>@job.CreatedDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@job.Id" asp-area="Admin" asp-controller="Company" asp-action="Edit" asp-route-id="@job.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" data-id="@job.Id" asp-area="Admin" asp-controller="Company" asp-action="Delete" asp-route-id="@job.Id">
                                    <i class="bx bx-minus-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/company.js" type="application/ecmascript"></script>
}