@model List<UserDto>
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> Users</h4>

<div class="card">
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <div class="mb-3">
                <a class="btn btn-success" asp-area="Admin" asp-controller="User" asp-action="Add">
                    Create User <i class="bx bx-plus"></i>
                </a>
            </div>
            <table class="table table-striped table-bordered" id="table-users">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Image</th>
                        <th>Email Address</th>
                        <th>Phone Number</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr data-id="@user.Id">
                            <td>@user.FullName</td>
                            <td>
                                <img style="width:50px;height:50px;" src="~/images/@user.Image?.FileName" />
                            </td>
                            <td>@user.EmailAddress</td>
                            <td>@user.PhoneNumber</td>
                            <td>@string.Join(", ",user.Roles)</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                                    <i class="bx bx-minus-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Full Name</th>
                        <th>Email Address</th>
                        <th>Phone Number</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/user.js" type="application/ecmascript"></script>
}