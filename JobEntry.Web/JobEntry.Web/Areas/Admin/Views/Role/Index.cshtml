@model List<RoleDto>
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Users /</span> Roles</h4>

<div class="card">
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <div class="mb-3">
                <a class="btn btn-success" asp-area="Admin" asp-controller="Role" asp-action="Add">
                    Create Role <i class="bx bx-plus"></i>
                </a>
            </div>
            <table class="table table-striped table-bordered" id="table-roles">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                       
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var role in Model)
                    {
                        <tr data-id="@role.Id">
                            <td>@role.Name</td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@role.Id" asp-area="Admin" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">
                                    <i class="bx bxs-edit"></i>
                                </a>
                                <a class="btn btn-danger btn-sm" data-id="@role.Id" asp-area="Admin" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">
                                    <i class="bx bx-minus-circle"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/role.js" type="application/ecmascript"></script>
}